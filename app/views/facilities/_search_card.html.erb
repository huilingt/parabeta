<div class="verified-card", style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/N_Y88TWmGwA')">
  <div class="icons"><i class="fa-solid fa-wheelchair"></i></div>
  <div class="row">

      <div class="col-7 details">
        <h2><%= facility.name %></h2>

        <p><%= facility.distance  %> metres away</p>
        <span><%= facility.address %></span>
        <div>
          <i class="fa-regular fa-star"></i>
          <i class="fa-regular fa-star"></i>
          <i class="fa-regular fa-star"></i>
          <i class="fa-regular fa-star"></i>
          <i class="fa-regular fa-star"></i>
        </div>
      </div>

    <div class="d-flex align-item-end justify-content-end">
      <div class="status">
        <div class="badge badge-verified">
          <% if facility.verified_status == true %>
            <h3>Verified</h3>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
