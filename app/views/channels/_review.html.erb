<div id="review-<%= review.id %>">

<div class="community-review-card">

  <div class="d-flex justify-content-between align-items-center mb-1 fw-bold">
    <h2><%= review.facility.name.capitalize[0..12] %></h2>
    <button class="btn btn-gradient"><h6>New Review</h6></button>
  </div>

  <div class="d-flex justify-content-between mt-2">
   <h6><%= link_to "@#{review.facility.name[0..18]}", facility_path(review.facility)%></h6>

    <%# Time sent ago %>
    <% timecreated = review.created_at %>
    <small>
      <h6><%= time_ago_in_words(timecreated).gsub('about','') + ' ago' %></h6>
    </small>
  </div>
  <%# <img src="https://source.unsplash.com/mNefYU7uRbk" alt="food image" width= "100%" height="150px"> %>
  <%= cl_image_tag review.facility.photo.key, height: 150, width: 330, crop: :fill, object_fit: :cover %>
  <p class="mt-3"><h6><%= review.content[0..100] %></h6></p>
</div>

</div>
