<%= simple_form_for [review, comment],
                  data: {
                    insert_in_list_target: "form",
                    action: "submit->insert-in-list#send"
                  } do |f| %>


<div class="comment-box">
  <div class="row mt-5">
    <div class="col-3">
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, class: :av , height: 150, width: 150, crop: :fill, gravity: :face%>
      <% else %>

      <% end %>
    </div>

    <div class="col-7">
      <%= f.input :comment, as: :text, class: "textwhite-shadow", placeholder: "Write your comment", label: false %>
    </div>

    <div class="col-2">
      <div class="d-flex justify-content-end">
        <%= f.button :submit, 'POST', class:"textblue-shadow p-2" %>
      </div>
    </div>

  </div>
</div>


<% end %>
